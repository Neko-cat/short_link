<h1>Liens</h1>

<div>
    <% @links.each do |link| %>
        <div>
            <a href="/generator/<%= link.id %>">
                <%= link.original %>
            </a>
        </div>
        <div>
            <span>Lien court :</span>
            <a href="<%= link.id %>">
                <%= URI.join(request.url, "/").to_s + link.id.to_s%>
            </a>
        </div>
        <div>
            <span>Trafic : <%= link.view %></span>
        </div>
    <% end %>
    <div class="generate-button">
        <%= link_to "Générer un lien", "/generator/new" %>
    </div>
</div>